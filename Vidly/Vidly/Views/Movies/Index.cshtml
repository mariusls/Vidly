@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movielist</h1>

@Html.ActionLink("New Movie", "New", "MovieForm", new { @class = "btn btn-primary" })

@if (!Model.Any())
{
    <p>There are no movies in the list yet.</p>
}


else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movie
                </th>
                <th>
                    Genre
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id}, null)
                    </td>
                    <td>
                        @movie.Genre.Name
                    </td>
                </tr>

            }
        </tbody>
    </table>
}

